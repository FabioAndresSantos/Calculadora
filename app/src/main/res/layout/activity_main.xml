<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSuma"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="248dp"
        android:backgroundTint="#424242"
        android:text="+"
        android:textColor="#047BFB"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDivision"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginStart="268dp"
        android:layout_marginBottom="136dp"
        android:backgroundTint="#424242"
        android:text="/"
        android:textColor="#047BFB"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnResta"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="248dp"
        android:backgroundTint="#424242"
        android:text="-"
        android:textColor="#047BFB"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPotencia"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="136dp"
        android:backgroundTint="#424242"
        android:text="^"
        android:textColor="#047BFB"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSalir"
        android:layout_width="192dp"
        android:layout_height="92dp"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#424242"
        android:text="Salir"
        android:textColor="#047BFB"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPorcentaje"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="136dp"
        android:backgroundTint="#424242"
        android:text="%"
        android:textColor="#047BFB"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMultiplicacion"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginStart="268dp"
        android:layout_marginBottom="248dp"
        android:backgroundTint="#424242"
        android:text="X"
        android:textColor="#047BFB"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="CalDroid"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNumero1"
        android:layout_width="305dp"
        android:layout_height="71dp"
        android:layout_marginStart="52dp"
        android:ems="10"
        android:hint="Digite numero 1"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14" />

    <EditText
        android:id="@+id/editNumero2"
        android:layout_width="305dp"
        android:layout_height="71dp"
        android:layout_marginStart="52dp"
        android:ems="10"
        android:hint="Digite numero 2"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="Resultado"
        android:textColor="#2196F3"
        android:textSize="27sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.438" />

    <TextView
        android:id="@+id/Resultado"
        android:layout_width="176dp"
        android:layout_height="88dp"
        android:layout_marginStart="184dp"
        android:textAlignment="center"
        android:textSize="27dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

</androidx.constraintlayout.widget.ConstraintLayout>